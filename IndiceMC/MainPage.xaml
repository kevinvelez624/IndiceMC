<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IndiceMC.MainPage">

    <StackLayout VerticalOptions="Center"
                 HorizontalOptions="Center">
        <Label Text="Ingrese su IMC"/>
        <Entry Placeholder="Altura *" x:Name="txtaltura" Keyboard="Numeric"/>
        <Entry Placeholder="Peso *" x:Name="txtpeso" Keyboard="Numeric"/>
        <Entry Placeholder="Resultado" x:Name="txtresultado" IsEnabled="False"/>
        <Button Text="Calcular" x:Name="BtnCalular" Clicked="BtnCalular_Clicked"/>
        <Button Text="Obtener peso mx" x:Name="BtnObtenerDatos" Clicked="BtnObtenerDatos_Clicked_1"/>
    </StackLayout>

</ContentPage>
